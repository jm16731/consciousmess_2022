<p id="notice"><%= notice %></p>

<h1>Ripples</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Posted</th>
      <th>Message</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= ripple.name %></td>
        <td><%= ripple.posted %></td>
        <td><%= ripple.message %></td>
        <td><%= ripple.url %></td>
        <td><%= link_to 'Show', ripple %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ripple', new_ripple_path %>

<%= link_to 'Newest', newest_path %>
<%= link_to 'Previous 10', ripples_path(:offset => (@offset.to_i - 10)) %>
<%= link_to 'Next 10', ripples_path(:offset => (@offset.to_i + 10)) %>
<%= link_to 'Oldest', oldest_path %>
